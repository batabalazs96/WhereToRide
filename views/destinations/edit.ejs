<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">New destination</h1>
  <div class="col-6 offset-3">
    <form
      action="/destinations"
      method="POST"
      class="validated-form"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="destination[title]"
          value="<%= destination.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="destination[location]"
          value="<%= destination.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="destination[image]"
          value="<%= destination.image %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Distance from Budapest</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">KM</span>
          <input
            type="text"
            class="form-control"
            id="distance"
            placeholder="0.00"
            aria-label="distance"
            aria-describedby="price-label"
            name="destination[distance]"
            value="<%= destination.distance %> "
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="destination[description]"
          required
        >
        <%= destination.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update destination</button>
      </div>
    </form>
    <a href="/destinations">All destinations</a>
    <a href="/destinations/<%= destination._id %> ">Back to destination</a>
  </div>
</div>
