<% layout('layouts/boilerplate') -%>
<div id="map" style="width: 100%; height: 300px"></div>

<h1>These are destinations</h1>
<ul>
  <form action="/destinations/new">
    <button type="submit">Add new destination</button>
  </form>

  <!-- Go through the DB and listing the destination title -->
  <% for(let destination of destinations) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <%if(destination.images.length) {%>
        <img class="img-fluid" alt="" src="<%=destination.images[0].url%>" />
        <% }else {%>
        <img
          class="img-fluid"
          alt=""
          src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png"
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= destination.title %></h5>
          <p class="card-text"><%= destination.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= destination.location%></small>
          </p>
          <a class="btn btn-primary" href="/destinations/<%=destination._id%>"
            >View <%=destination.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const destinations = {features: <%- JSON.stringify(destinations)%>}
</script>
<script src="/javascripts/clusterMap.js"></script>
