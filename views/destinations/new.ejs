<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">New destination</h1>
  <div class="col-6 offset-3">
    <form action="/destinations" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title" required>Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="destination[title]"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="destination[location]"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="destination[image]"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="destination[description]"
          required  ></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add destination</button>
      </div>
    </form>
    <a href="/destinations">All destinations</a>
  </div>
</div>
